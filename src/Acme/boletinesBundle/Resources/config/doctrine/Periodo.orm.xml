<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\boletinesBundle\Entity\Periodo" table="periodo">
    <indexes>
      <index name="FK_establecimiento_id" columns="establecimiento_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="nombre" type="string" column="nombre" length="40" nullable="false"/>
    <field name="fechaDesde" type="datetime" column="fecha_desde" nullable="false"/>
    <field name="fechaHasta" type="datetime" column="fecha_hasta" nullable="false"/>
    <field name="creationTime" type="datetime" column="creation_time" nullable="false"/>
    <field name="updateTime" type="datetime" column="update_time" nullable="false"/>

    <many-to-one field="establecimiento" target-entity="Establecimiento" inversed-by="periodos">
      <join-columns>
        <join-column name="establecimiento_id" referenced-column-name="id" on-delete="cascade"/>
      </join-columns>
    </many-to-one>

    <one-to-many field="evaluaciones" target-entity="Evaluacion" mapped-by="periodo" />

  </entity>
</doctrine-mapping>
