<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\boletinesBundle\Entity\Mensaje" table="mensaje">
    <indexes>
      <index name="usuario_envia_fk_mensaje" columns="id_usuario_envia"/>
      <index name="usuario_recibe_fk_mensaje" columns="id_usuario_recibe"/>
    </indexes>
    <id name="idMensaje" type="integer" column="id_mensaje">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="tituloMensaje" type="string" column="titulo_mensaje" length="100" nullable="false"/>
    <field name="textoMensaje" type="string" column="texto_mensaje" length="500" nullable="false"/>
    <field name="fechaEnvio" type="datetime" column="fecha_envio" nullable="false"/>
    <field name="borrado" type="boolean" column="borrado" nullable="false"/>
    <many-to-one field="idUsuarioRecibe" target-entity="Usuario">
      <join-columns>
        <join-column name="id_usuario_recibe" referenced-column-name="id_usuario"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idUsuarioEnvia" target-entity="Usuario">
      <join-columns>
        <join-column name="id_usuario_envia" referenced-column-name="id_usuario"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
