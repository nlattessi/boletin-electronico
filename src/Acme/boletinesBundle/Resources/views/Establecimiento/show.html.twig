{% extends '::base.html.twig' %}

{% block body -%}

  {{ include('BoletinesBundle::Institucion/fixed_nav.html.twig') }}
  {{ include('BoletinesBundle::Institucion/main_nav.html.twig', {'nav_selected': 'instituciones'}) }}

  <div class="container">
    <div class="row mar-top-soft">

      <div class="col s12 m8 l8">
      <h3 class="header">{{ establecimiento.institucion.nombre }}</h3>
      </div>
      <div class="col s12 m4 l4 center-align">
      {% if establecimiento.institucion.logo %}
        <img src="{{ asset('') }}{{ establecimiento.institucion.webPath }}" alt="as" class="inst-thumb mar-top-soft">
      {% endif %}
      </div><!--  End Tables Section  -->

  </div>
  <div class="divider mar-top-soft"></div>

        <div class="row mar-top-soft">
          <div class="col s12 m12 l12">
                <div class="row">
                 <div class="col s10 m10 l10">
                   <h4 class="header">{{ establecimiento.nombre }}</h4>
                  </div>
                  <div class="col s2 m2 l2">
                   <a href="{{ path('establecimiento_edit', {'id': establecimiento.id}) }}" data-position="left" data-delay="25" data-tooltip="Editar establecimiento" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-pencil"></i></a>
                  </div>
                </div>
          </div>
          <div class="col s12 m6 l6">
          <h5 class="header">Dirección: <span class="span-s"> {{ establecimiento.direccion }}</span></h5>
          <h5 class="header">Longitud: <span class="span-s"> {{ establecimiento.longitud }}</span></h5>
          <h5 class="header">Código país: <span class="span-s"> {{ establecimiento.codigoPais }}</span></h5>
          <h5 class="header">Fecha de inaguración: <span class="span-s"> {{ establecimiento.fechaInauguracion | localizeddate('none', 'none', 'es_AR', null, "dd/MM/Y") }}</span></h5>
          <h5 class="header">Fecha de creación: <span class="span-s"> {{ establecimiento.creationTime | localizeddate('none', 'none', 'es_AR', null, "dd/MM/Y") }}</span></h5>
          </div>
          <div class="col s12 m6 l6">
          <h5 class="header">Ciudad: <span class="span-s"> {% if establecimiento.ciudad %}{{ establecimiento.ciudad.nombre }}{% endif %} </span> </h5>
          <h5 class="header">Código postal: <span class="span-s"> {{ establecimiento.codigoPostal }}</span></h5>
          <h5 class="header">Latitud: <span class="span-s"> {{ establecimiento.latitud }}</span></h5>
          <h5 class="header">Código de area: <span class="span-s"> {{ establecimiento.codigoArea }}</span></h5>
          <h5 class="header">Email: <span class="span-s"> {{ establecimiento.email }}</span></h5>


          </div>
      </div>
  </div>

  {{ include('::footer.html.twig') }}
  {% endblock %}
