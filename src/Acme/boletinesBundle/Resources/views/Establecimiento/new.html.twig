{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Establecimiento creation</h1>

   
  
  
       <form action="{{ path('establecimiento_new') }}" method="post">

          <input type="text" placeholder="nombre" name="nombreEstablecimiento"><br/>
        <input type="text" placeholder="direccion" name="direccionEstablecimiento"><br/>
           <input type="text" placeholder="email" name="emailEstablecimiento"><br/>
           <input type="text" placeholder="telefono" name="telefonoEstablecimiento"><br/>
           <select name="idInstitucion">
               {% for institucion in entitiesRelacionadas %}

               <option value="{{institucion.idInstitucion}}">{{institucion.__toString()}}</option>

               {% endfor %}
               <option value="-1" selected="selected">Seleccione una Institucion creada</option>
           </select>
           <br/><br/><br/>
      <button type="submit" >Crear Establecimiento</button>
        
        
        <br/>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('establecimiento') }}">
            Volver a la lista
        </a>
    </li>
</ul>
{% endblock %}
