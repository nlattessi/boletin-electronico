{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Establecimiento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nombreestablecimiento</th>
                <th>Direccionestablecimiento</th>
                <th>Telefonoestablecimiento</th>
                <th>Emailestablecimiento</th>
                <th>Idestablecimiento</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('establecimiento_show', { 'id': entity.idEstablecimiento }) }}">{{ entity.nombreEstablecimiento }}</a></td>
                <td>{{ entity.direccionEstablecimiento }}</td>
                <td>{{ entity.telefonoEstablecimiento }}</td>
                <td>{{ entity.emailEstablecimiento }}</td>
                <td>{{ entity.idEstablecimiento }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('establecimiento_show', { 'id': entity.idEstablecimiento }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('establecimiento_edit', { 'id': entity.idEstablecimiento }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('establecimiento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
