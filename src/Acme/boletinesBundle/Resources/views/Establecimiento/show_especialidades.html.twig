<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Especialidades</title>

  <!-- JS -->
  <script type="text/javascript" src="{{ asset('bundles/boletines/js/jquery.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/boletines/js/moment.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/boletines/js/bootstrap-datetimepicker.min.js') }}"></script>

  <!-- CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.1/paper/bootstrap.min.css">
  <link rel="stylesheet" href="{{ asset('bundles/boletines/css/bootstrap-datetimepicker.min.css') }}" />

</head>
<body>

  <main class="container">
    <!-- ANGULAR VIEWS -->

    <div class="page-header">
      <h1>
        Especialidades de {{ establecimiento.nombre }}
        <a href="{{ path('establecimiento_add_especialidad', {'id': establecimiento.id}) }}" class="btn btn-default">
          <span class="glyphicon glyphicon-plus"></span>
            New Especialidad
        </a>
      </h1>
    </div>

    <table class="table table-bordered table-striped" ng-show="user.users">
    <thead>
    <tr>
    <th>_id</th>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th class="col-sm-2"></th>
    </tr>
    </thead>
    <tbody>
    <!-- LOOP OVER THE USERS -->
    {% for especialidad in especialidades %}
    <tr>
    <td>{{ especialidad.id }}</td>
    <td>{{ especialidad.nombre }}</td>
    <td>{{ especialidad.descripcion }}</td>
    <td class="col-sm-2">
      <a href="{{ path('establecimiento_remove_especialidad', {'id': especialidad.id}) }}" class="btn btn-primary">Delete</a>
    </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>


  </main>

</body>
</html>
