{% extends 'BoletinesBundle:Layout:layout.html.twig' %}

{% block breadcrumb %}
    <li><a href="#" class="b-focus">Boletin</a></li>
{% endblock %}

{% block page %}

<div class="row">
  <div class="col s12 m12 l12">
    <div class="row">
      <div class="col s10 m10 l10">
        <h4 class="header">Validar bolet√≠n</h4>
      </div>
      <div class="col s10 m10 l10">
        <h5 class="header">Selecciona una materia para continuar</h5>
      </div>
    </div>
    <div class="row">
      <div class="col s12 mar-top-soft">
        {% for materia in materias %}
          <div class="col s12 m6 l6"> <!-- start grupo-->
            <div class="panel-mini panel-assigment">
              <div class="row">
                <div class="col s9 m9 l9">
                  <h5 class="panel-title truncate">{{materia}}</h5>
                </div>
                <div class="col s2 m3 l3 right-align">
                  <a href="{{ path('boletin_validar_notas', {'materiaId':materia.id }) }}" data-position="top" data-delay="25" data-tooltip="Validar materia" class="tooltipped btn-floating btn-large waves-effect waves-light not-active link">
                    <i class="icon-linear-plus"></i>
                  </a>
                </div>
              </div>
            </div>
          </div><!-- end grupo-->
        {% endfor %}
      </div>
    </div>
  </div><!--  End Tables Section  -->
</div>

{% endblock %}
