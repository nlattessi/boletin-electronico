{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}Calificaciones{% endblock %}
{% block page %}
    <div class="row">
        <div class="col s12 m7 l7">
            <h3 class="header">Planilla de calificaciones</h3>
        </div>
        {% if app.user.rol == 'ROLE_PADRE' %}
            <div class="col s12 m5 l5">
                <h5 class="right-ch"><img src="{{ asset('bundles/boletines/images/student-avatar-f.png')}}" alt="as" class="avatar-main circle1"> {{ app.session.get('alumnoActivo') }}</h5>
            </div>
        {% endif %}

    </div>


    <div class="row ">

        <div class="col s12 ">


            <div class="col s12 m12 l12 mar-bot-top"> <!-- start table 2-->
                <div class="row">
                    <div class="col s12  m12 l12">
                        <table class="striped responsive-table">
                            <thead>
                            <tr>
                                <th data-field="">Fecha</th>
                                <th data-field="">Materia</th>
                                <th data-field="">Calificaci√≥n</th>
                                <th data-field="">Observaciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for calificacion in entities %}
                                <tr>
                                    <td>{{ calificacion.fecha|date('d/m/Y') }}</td>
                                    <td>
                                        {{ calificacion.evaluacion.materia }}
                                    </td>
                                    <td>
                                        {{ calificacion.valor }}
                                    </td>
                                    <td>
                                        {% if (calificacion.comentario) %}
                                            {{ calificacion.comentario }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>

                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                    </div>
                </div>
            </div><!-- end table 2-->
        </div><!-- end student 1-->
    </div>
{% endblock %}