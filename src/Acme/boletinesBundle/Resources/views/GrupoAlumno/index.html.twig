                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col s12 mar-top-soft">

                    <table class="striped">
                        <thead>
                        <tr>
                            <th data-field="id">Nombre del grupo</th>
                            <th data-field="id">Cantidad de integrantes</th>
                            <th data-field="id">Creaci√≥n</th>
                            <th data-field="id">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for grupo in gruposAlumnos %}
                            <tr>
                                <td><a href="{{ path('grupoAlumno_show', { 'id': grupo.id })  }}" class="casual">{{ grupo.nombre }}</a></td>
                                <td><span class="new badge">{{ grupo.alumnos|length }}</span></td>
                                <td>{{ grupo.creationTime|date("d/m/Y") }}</td>
                                <td>
                                    <a href="{{path('grupoAlumno_edit', {'id' : grupo.id})}}" data-position="top" data-delay="25" data-tooltip="Editar" class="tooltipped btn-small btn waves-effect waves-light"><i class="icon-linear-pencil"></i></a>
                                    <a data-position="top" data-delay="25" data-tooltip="Eliminar" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-trash2"></i></a>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div><!--  End Tables Section  -->
