        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s10 m10 l10">
                    <h4 class="header">Grupos de Alumnos</h4>
                </div>
                <div class="col s2 m2 l2">
                    <a href="{{ path('grupoAlumno_new') }}" data-position="left" data-delay="25" data-tooltip="Crear nuevo grupo" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-plus"></i></a>
                </div>
                <div class="input-field col s6">
                    <i class="icon-linear-magnifier prefix"></i>
                    <input id="icon_prefix" type="text" class="validate">
