{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Materia</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id Materia</th>
            <td>{{ materia.idMateria }}</td>
        </tr>
        <tr>
            <th>Materia</th>
            <td>{{ materia.nombreMateria }}</td>
        </tr>
        {% if materia.tipoMateria != null %}
            <tr>
                <th>TipoMateria Asociado</th>
                <td>{{ materia.tipoMateria.__toString() }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('materia') }}">
           Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('materia_edit', { 'id': materia.idMateria }) }}">
            Editar
        </a>
    </li>
    <li> <a href="{{ path('materia_delete', { 'id': materia.idMateria }) }}">Borrar</a></li>
</ul>
{% endblock %}
