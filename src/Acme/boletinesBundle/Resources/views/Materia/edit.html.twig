{% extends 'BoletinesBundle:Layout:layout.html.twig' %}

{% block page %}
    <div class="row">

        <div class="col s12 m12 l12">
            <form action="{{ path('materia_edit' , {'id' : materia.id }) }}" method="post">

                <div class="row">
                    <div class="col s10 m10 l10">
                        <h4 class="header">Editar materia</h4>
                    </div>

                    <div class="input-field col s6">
                        <input value="{{ materia.nombre }}" name="nombre" id="icon_prefix" type="text"
                               class="validate">
                        <label for="icon_prefix">Nombre de la materia</label>
                    </div>
                    <div class="input-field col s6">
                        <select name="tipo_materia" id="tipo_materia">
                            {% for tipoMateria in tiposMateria %}
                                <option value="{{ tipoMateria.id }}"
                                        {% if materia.tipoMateria == tipoMateria %}
                                            selected="selected"
                                        {% endif %}
                                        >
                                    {{ tipoMateria.nombre }}
                                </option>
                            {% endfor %}
                        </select>
                        <label for="tipo_materia">Departamento o Área</label>
                    </div>
                    <div class="input-field col s12 m6 l6">
                        <select name="establecimiento" id="establecimiento">
                            {% for establecimiento in establecimientos %}
                                <option value="{{ establecimiento.id }}"
                                        {% if materia.establecimiento == establecimiento %}
                                            selected="selected"
                                        {% endif %}
                                        >
                                    {{ establecimiento.nombre }}
                                </option>
                            {% endfor %}
                        </select>
                        <label for="establecimiento">Establecimiento</label>

                    </div>
                </div>

                <div class="row">
                    <div class="col s12 mar-top-soft">
                        <div class="row">
                            <div class="col s2 mar-top-fix">
                                <h5 class="header">Lunes</h5>
                            </div>
                            <div class="col s1 mar-top-fix">
                                <p>
                                    <input name="lunes_chk" type="checkbox"
                                           id="test1" class="filled-in"
                                            {% if dias['Lunes'] is defined %}
                                                checked
                                            {% endif %}
                                            />
                                    <label for="test1"></label>
                                </p>
                            </div>
                            <div class="input-field col s3 ">
                                <input value="{% if dias['Lunes'] is defined %}{{ dias['Lunes']['horaInicio'] }}{% endif %}" name="lunes_inicio" id="icon_prefix"
                                       type="text" class="validate">
                                <label for="lunes_inicio">Hora inicio</label>
                            </div>
                            <div class="input-field col s3 ">
                                <input  value="{% if dias['Lunes'] is defined %}{{ dias['Lunes']['horaFin'] }}{% endif %}" name="lunes_fin" id="icon_prefix"
                                       type="text" class="validate">
                                <label for="lunes_fin">Hora fin</label>
                            </div>

                        </div>
                        <!--  End row  -->
                    </div>
                </div>
                <!--  End row  -->
                <div class="divider mar-bot-top"></div>
