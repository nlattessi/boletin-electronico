{% extends '::base.html.twig' %}

{% block body -%}

<div class="container login fadeIn animated">

    <div class="login-wrapper">
        <form action="{{ path('login_check') }}" method="post">
            <div class="center-align"><img class="responsive-img" src="{{ asset('bundles/boletines/images/isologotipoFull.png') }}" width="380"></div>
            <h5 class="center-align">Inicia sesión para continuar</h5>
            {% if error %}
                <div class="error-msg center-align"><i class="icon-linear-cross"></i> Alguno de los datos ingresados es incorrecto</div>
            {% endif %}
            {#{% if recover %}#}
                {#<div class="error-msg center-align"><i class="icon-linear-cross"></i> Su contraseña ha sido enviada </div>#}
            {#{% endif %}#}
            {% for flashMessage in app.session.flashbag.get('token') %}
                <div class="error-msg center-align">
                    <i class="icon-linear-cross"></i>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="input-field col s12">
                    <i class="icon-linear-user prefix"></i>
                    <input id="icon_prefix" type="text"  name="_username" class="validate" value="{% if (last_username) %}{{ last_username }}{% endif %}">
                    <label for="icon_prefix">Dni</label>
                </div><br>
                <div class="input-field col s12">
                    <i class="icon-linear-lock prefix"></i>
                    <input id="icon_telephone" type="password" name="_password" class="validate">
                    <label for="icon_telephone">Contraseña</label>
                </div>
                <div class="col s12" style="margin-bottom: 15px;">
                    <form action="#">
                        <p class="center-align">
                            <input type="checkbox" id="test5" />
                            <label for="test5">Permanecer conectado</label>
                        </p>
                        <p class="center-align">
                            ¿Olvidaste tu contraseña? <a href="{{ path('usuario_email_recovery_password') }}">Solicita una nueva</a>
                        </p>
                    </form>
                </div>
                <div class="col s12 center-align">
                    <button class="btn-large waves-effect waves-light center-align btn100p" type="submit">Ingresar</button>
                </div>
            </div>
        </form>
    </div>

</div>

{% endblock %}
