<div class="row">
    <div class="col s10 m10 l10">
        <h3 class="header">Tablero</h3>
    </div>



    <div class="col s12 mar-top-soft"> <!-- start contenedor -->
        <div class="row"> <!-- start row de widgets-->

            <div class="col s12 m6 l6"> <!-- startWidget 4-->
                <div class="row">
                    <div class="col s12 sch-mb">
                        <div class="panel-default">
                            <div class="panel-body-school normalh center-align">
                                <img src="{{ asset('bundles/boletines/images/mb.png')}}" alt="as" class="inst-thumb">
                                <h6 class="school-style ">Colegio Manuel Belgrano</h6>
                                <div class="col s4">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- endWidget 4-->

            <div class="col s12 m6 l6"> <!-- startWidget 1-->
                <div class="row ">
                    <div class="col s12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col s12 widget-link">
                                        <a href="calendario_alumno.html"> <h5 class="panel-title"><i class="icon-linear-calendar-insert"></i> Próximos exámenes</h5></a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body normalh">
                                <div class="col s12">
                                    {% for evaluacion in evaluaciones %}
                                        <h6><span class="widget-events-date">{{  evaluacion.fecha|date('d/m/Y')}}</span> {{ evaluacion.materia}} </h6>
                                        <div class="divider"></div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- endWidget 1-->

        </div> <!-- end row de widgets-->
    </div> <!-- end col principal de widgets-->



    <div class="col s12 ">
        <h5 class="panel-title">Clases asignadas</h5>
    </div>

    <div class="col s12 "> <!-- start contenedor de cursos -->

        <div class="row"> <!-- start row cursos-->
            {% for materia in materias %}
            <div class="col s12 m6 l6"> <!-- start materia-->
                <div class="panel-mini panel-assigment">
                    <div class="row">
                        <div class="col s9">
                            <a href="materias-detalle_docente.html"><h5 class="panel-title truncate">{{ materia.nombre }} </h5></a>
                            <h4>
                                {% for grupo in materia.gruposAlumnos %}
                                    {{ grupo ~ ' ' }}
                                {% endfor %}
                            </h4>
                        </div>
                        <div class="col s3 right-align">
                            <h5><i class="icon-linear-users2 d-d-i"></i> {{ materia.cantidadAlumnos }}</h5>
                            <h6>Alumnos</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 row mar-top-low right-align">
                            <i class="icon-linear-clock "></i>
                            {% for horario in materia.horarios %}
                                <span class="widget-time-date"> {{ horario}}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div><!-- end materia-->
            {% endfor %}

        </div> <!-- end row cursos-->

    </div><!-- end contenedor de cursos -->




    <div class="col s12 mar-top-soft">
        <h5 class="panel-title"><i class="icon-linear-history"></i> Calendario</h5>
        <div id="calendar"></div>
    </div>
</div>