{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Calendario list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id Calendario</th>
            <th>Nombre calendario</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for calendario in entities %}
            <tr>
                <td>{{ calendario.idCalendario }}</td>
                <td><a href="{{ path('calendario_show', { 'id': calendario.idCalendario }) }}">{{ calendario.__toString() }}</a></td>
    
                {% if calendario.usuarioPropietario %}
                    <td>{{ calendario.usuarioPropietario }}</td>
                {% endif %}

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('calendario_show', { 'id': calendario.idCalendario }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('calendario_edit', { 'id': calendario.idCalendario }) }}">Editar</a>
                        </li>
                        <li>
                            <a href="{{ path('calendario_delete', { 'id': calendario.idCalendario }) }}">Borrar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('calendario_new') }}">
                Crear Nuevo Calendario
            </a>
        </li>
    </ul>
{% endblock %}
