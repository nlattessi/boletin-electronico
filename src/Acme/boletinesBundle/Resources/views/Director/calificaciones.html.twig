{% extends 'BoletinesBundle:Layout:layout.html.twig' %}

{% block page %}
    <div class="row">

        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s10 m10 l10">
                    <h4 class="header">Validar calificaciones</h4>
                </div>

                {#<div class="input-field col s6">#}
                    {#<i class="icon-linear-magnifier prefix"></i>#}
                    {#<input id="icon_prefix" type="text" class="validate">#}
                    {#<label for="icon_prefix">Buscar materias</label>#}
                {#</div>#}
                {#<div class="input-field col s4 right">#}
                    {#<select>#}
                        {#<option value="" disabled selected>Filtrar</option>#}
                        {#<option value="1">El autocompletar sigue pendiente </option>#}
                    {#</select>#}
                {#</div>#}
            </div>

            <div class="row">
                <div class="col s12 mar-top-soft">
                    <form action="{{ path('calificacion_directivo_validar') }}" method="post">
                        <table class="striped">
                            <thead>
                            <tr>
                                <th data-field="id">Materia</th>
                                <th data-field="id">Alumno</th>
                                <th data-field="id">Docente</th>
                                <th data-field="id">Calificaci√≥n</th>
                                <th data-field="id">Validar</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for calificacion in calificaciones %}
                                    <tr>
                                        <td>{{ calificacion.evaluacion.materia }}</td>
                                        <td>{{ calificacion.alumno.nombre }}</td>
                                        <td>{{ calificacion.evaluacion.docente }}</td>
                                        <td>{{ calificacion.valor }}</td>
                                        <td>
                                            <p>
                                                <input name="calificacion[]" value="{{ calificacion.id }}" type="checkbox" id="califacacion{{ calificacion.id }}" class="filled-in">
                                                <label for="califacacion{{ calificacion.id }}"></label>
                                            </p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="col s12 center-align mar-top-soft">
                            <button type="submit" class="btn-large waves-effect waves-light center-align mar-right">Validar</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <!--  End Tables Section  -->
    </div>
{% endblock %}
