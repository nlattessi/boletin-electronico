                      <th data-field="price">URL</th>
                  </tr>
                </thead>
                <tbody>
                  {% for token in tokens %}
                  <tr>
                    <td>{{ token.token }}</td>
                    <td>{{ token.expirationTime | localizeddate('none', 'none', 'es_AR', null, "d/MM/Y, hh:mm a Y") }}</td>
                    <td>{{ token.usuario.email }}</td>
                    <td><a href="http://communitas-dev.herokuapp.com/usuario/resetpassword/{{ token.token }}">http://communitas-dev.herokuapp.com/usuario/resetpassword/{{ token.token }}</a></td>
