{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}Usuarios{% endblock %}

{% block page %}
        <div class="row">

            <div class="col s12 m12 l12">

                <!--  Tables Section-->


                <div id="striped">
                    <div class="row mar-top-soft">
                        <div class="col s10 m10 l10">
                            <h3 class="header">Asignar o editar usuarios a instituciones</h3>

                        </div>

                        <div class="input-field col s11 mar-top-soft">
                            <form action="{{ path('usuario_index_admin_search') }}" method="post" enctype="multipart/form-data">
                            <i class="icon-linear-magnifier prefix"></i>
                            <input id="icon_prefix" type="text" class="validate" name="search">
                            <label for="icon_prefix">Buscar instituci√≥n</label>
                            </form>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col s12">

                            <table class="striped">
                                <thead>
                                <tr>
                                    <th data-field="">Nombre</th>
                                    <th data-field="">Usuarios</th>
                                    <th data-field="">Acciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for institucion in entities %}
                                    <tr>
                                        <td><a href="{{ path('institucion_show', {'id': institucion.id}) }}" class="casual">{{ institucion.nombre }}</a></td>
                                        <td><span class="new badge">{{ institucion.usuarios|length }}</span></td>

                                        <td>
                                            <a href="{{ path('usuario_edit_institucion', {'institucionId':institucion.id } )}}" data-position="top" data-delay="25" data-tooltip="Editar usuarios" class="tooltipped btn-small btn waves-effect waves-light"><i class="icon-linear-pencil"></i></a>
                                            <a href="{{ path('usuario_new_institucion', {'institucionId':institucion.id } ) }}" data-position="top" data-delay="25" data-tooltip="Nuevo usuario" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-plus"></i></a>

                                        </td>


                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div><!--  End Tables Section  -->
            <div class="row">

                <div class="col s12 m12 l12 mar-top-soft">
                    <ul class="pagination pagi-pad">
                        <li class="disabled"><a href="#!"><i class="icon-linear-chevron-left"></i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="icon-linear-chevron-right"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
{% endblock %}
