{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}Usuarios{% endblock %}

{% block page %}

  <div class="row mar-top-soft">

    <div class="col s12 m8 l8">
    <h3 class="header">{{ institucion.nombre }}</h3>
    </div>
    <div class="col s12 m4 l4 center-align">
        {% if institucion.logo %}
            <img src="{{ asset('') }}{{ institucion.webPath }}" alt="as" class="inst-thumb mar-top-soft">
        {% endif %}
    </div><!--  End Tables Section  -->

</div>
<div class="divider mar-top-soft"></div>

    <div class="row mar-top-soft">

    <div class="col s10 m10 l10">
    <h3 class="h-h3"><i class="icon-linear-pencil"></i> Editar usuarios</h3>
    </div>
    <div class="col s2 m2 l2">
            <a href="{{ path('usuario_new_institucion', {'institucionId':institucion.id } ) }}" data-position="left" data-delay="25" data-tooltip="Crear nuevo usuario" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-plus"></i></a>
          </div>

    <div class="col s12 m8 l12">
      <ul class="collapsible mar-top-soft" data-collapsible="expandable">
  {% for usuario in entities %}
        <li>

          <div class="collapsible-header"><h5 class="panel-title"><i class="icon-linear-user"></i> {{ usuario.nombre }}<i class="icon-linear-chevron-down right"></i></h5></div>

          <div class="collapsible-body"> <!--  start user 1  -->
              <form  action="{{ path('usuario_edit_institucion',  {'institucionId': institucion.id }) }}" method="post">
              <div class="row">
                  <div class="col l12 pad-all-edit">
                      <input name="id" type="hidden" value="{{ usuario.id }}">
                      <div class="input-field col s12 m6 l6">
                          <input name="nombre" id="nombre" type="text" class="validate" value="{{ usuario.nombre }}">
                          <label for="nombre">Nombre y Apellido</label>
                      </div>
                      <div class="input-field col s12 m6 l6">
                          <input name="email" id="email" type="text" class="validate" value="{{ usuario.email }}">
                          <label for="email">Email</label>
                      </div>
                      <div class="input-field col s12 m6 l6">
                          <input name="password" id="password" type="password" class="validate">
                          <label for="password">Contrase√±a</label>
                          <div class="col s12 m6 l6 right">
                              <button type="submit" class="btn-xsmall mistake waves-effect waves-light " name="guardar">Guardar Cambios</button>
                              <button type="submit" class="btn-xsmall waves-effect waves-light " name="borrar">Borrar</button>
                          </div>
                      </div>
                    </div>
              </div>

              </form>
          </div> <!--  end user 1  -->


        </li>
  {% endfor %}

  </ul>



    </div>
   <!--  End Tables Section  -->

</div>

{% endblock %}
