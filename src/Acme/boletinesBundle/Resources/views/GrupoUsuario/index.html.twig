{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}
    <li><a href="#" class="b-focus">Grupos de alumnos</a></li>
{% endblock %}
{% block page %}
    <div class="row">

        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s10 m10 l10">
                    <h4 class="header">Grupos de usuarios</h4>
                </div>
                <div class="col s2 m2 l2">
                    <a href="{{ path('grupoUsuario_new') }}" data-position="left" data-delay="25" data-tooltip="Crear nuevo grupo" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-plus"></i></a>
                </div>
                <div class="input-field col s6">
                    <i class="icon-linear-magnifier prefix"></i>
                    <input id="icon_prefix" type="text" class="validate">
                    <label for="icon_prefix">Buscar grupo</label>
                </div>
                <div class="input-field col s4 right">
                    <select>
                        <option value="" disabled selected>Filtrar por</option>
                        <option value="1">El autocompletar sigue pendiente</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col s12 mar-top-soft">

                    <table class="striped">
                        <thead>
                        <tr>
                            <th data-field="id">Nombre del grupo</th>
                            <th data-field="id">Cantidad de integrantes</th>
                            <th data-field="id">Creaci√≥n</th>
                            <th data-field="id">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for grupo in grupos %}
                            <tr>
                                <td><a href="grupos-detalle_directivo.html" class="casual">{{ grupo.nombre }}</a></td>
                                <td><span class="new badge">{{ grupo.usuarios|length }}</span></td>
                                <td>{{ grupo.creationTime|date("d/m/Y") }}</td>
                                <td>
                                    <a href="grupos-editar_directivo.html" data-position="top" data-delay="25" data-tooltip="Editar" class="tooltipped btn-small btn waves-effect waves-light"><i class="icon-linear-pencil"></i></a>
                                    <a href="{{path('grupoUsuario_delete_from_director', {'id' : grupo.id})}}" data-position="top" data-delay="25" data-tooltip="Eliminar" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-trash2"></i></a>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>

            </div><!--  End Tables Section  -->
        </div>
    </div>


{% endblock %}