{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}
    <li><a href="#" class="b-focus">Bullying</a></li>
{% endblock %}
{% block page %}
    <div class="row">
        <div class="col s12 m7 l7">
            <h3 class="header">Avisos de Bullying</h3>
        </div>
    </div>
    <div class="row ">
        <div class="col s12 ">
            <div class="col s12 m12 l12 mar-bot-top"> <!-- start table 2-->
                <div class="row">
                    <div class="col s12  m12 l12">
                        <table class="striped responsive-table">
                            <thead>
                            <tr>
                                <th data-field="">Fecha</th>
                                <th data-field="">Alumno</th>
                                <th data-field="">Comentario</th>
                                <th data-field="">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for bullying in bullyings %}
                                <tr>
                                  <td>{{ bullying.fechaCarga|date('d/m/Y') }}</td>
                                  <td><a href="{{ path('alumno_show', {'id': bullying.alumno.id}) }}">{{ bullying.alumno }}</a></td>
                                  <td>{% if bullying.comentario %}{{ bullying.comentario }}{% else %}-{% endif %}</td>
                                    <td><a href="{{ path('bullying_show', { 'id': bullying.id }) }}"
                                           data-position="top" data-delay="25" data-tooltip="Ver"
                                           class="tooltipped  btn-small btn waves-effect waves-light">
                                            <i class="icon-linear-eye"></i>
                                        </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- end table 2-->
        </div><!-- end student 1-->
    </div>
{% endblock %}
