{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Entidad list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id Entidad</th>
                <th>Nombre entidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entidad in entities %}
            <tr>
                <td>{{ entidad.idEntidad }}</td>
                <td><a href="{{ path('entidad_show', { 'id': entidad.idEntidad }) }}">{{ entidad.__toString() }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('entidad_show', { 'id': entidad.idEntidad }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('entidad_edit', { 'id': entidad.idEntidad }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('entidad_delete', { 'id': entidad.idEntidad }) }}">Borrar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('entidad_new') }}">
                Crear Nueva Entidad
            </a>
        </li>
    </ul>
    {% endblock %}
