{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}
    <li><a href="#" class="b-focus">Padres</a></li>

{% endblock %}

{% block page %}
    <div class="row">

        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s10 m10 l10">
                    <h4 class="header">Madres/Padres/Tutores o encargados.</h4>
                </div>
                <div class="col s2 m2 l2">
                    <a href="{{ path('padre_new')  }}" data-position="left" data-delay="25" data-tooltip="Crear nuevo tutor" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-plus"></i></a>
                </div>
            </div>

            <div class="row">
                <div class="col s12 mar-top-soft">

                    <table class="bordered">
                        <thead>
                        <tr>
                            <th data-field="id">Nombre y Apellido</th>
                            <th data-field="name">DNI</th>
                            <th data-field="price">Hijos en la inst.</th>
                            <th data-field="price">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for padre in padres %}
                        <tr>
                            <td><a href="{{ path('padre_show', {'id': padre.id}) }}" class="casual">{{ padre }}</a></td>
                            <td>{{ padre.dni }}</td>
                            <td class="new badge">{{ padre.hijos|length }}</td>
                            <td>
                                <a href="{{ path('padre_new', {'id': padre.id})  }}" data-position="top" data-delay="25" data-tooltip="Editar" class="tooltipped btn-small btn waves-effect waves-light"><i class="icon-linear-pencil"></i></a>
                                <a href="{{ path('padre_delete', {'id': padre.id})  }}"data-position="top" data-delay="25" data-tooltip="Eliminar" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-trash2"></i></a>
                            </td>
                        </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                </div>
            </div>

        </div><!--  End Tables Section  -->

    </div>

{% endblock %}
