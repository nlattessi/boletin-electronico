{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mensaje</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id Mensaje</th>
            <td>{{ mensaje.idMensaje }}</td>
        </tr>
        <tr>
            <th>Mensaje</th>
            <td>{{ mensaje.nombreMensaje }}</td>
        </tr>
        {% if mensaje.entityRelacionada != null %}
        <tr>
            <th>EntityRelacionada Asociado</th>
            <td>{{ mensaje.entityRelacionada.__toString() }}</td>
        </tr>
        {% endif %}

        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mensaje') }}">
           Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('mensaje_edit', { 'id': mensaje.idMensaje }) }}">
            Editar
        </a>
    </li>
    <li> <a href="{{ path('mensaje_delete', { 'id': mensaje.idMensaje }) }}">Borrar</a></li>
</ul>
{% endblock %}
