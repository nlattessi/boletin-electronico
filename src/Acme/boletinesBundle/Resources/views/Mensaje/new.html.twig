{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mensaje creation</h1>


    <form action="{{ path('mensaje_new') }}" method="post">

        <input type="text" placeholder="titular" name="tituloMensaje"><br/>
        <input type="text" placeholder="texto" name="textoMensaje"><br/>

        <select name="idUsuarioRecibe">
            {% for usuario in entitiesRelacionadas %}

                <option value="{{usuario.id}}">{{usuario.__toString()}}</option>

            {% endfor %}
            <option value="-1" selected="selected">Seleccione una usuario creada</option>
        </select>
        <br/><br/><br/>

        <button type="submit" >Crear Mensaje</button>


        <br/>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('mensaje') }}">
                Volver a la lista
            </a>
        </li>
    </ul>
{% endblock %}
