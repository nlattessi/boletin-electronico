{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Institucion edit</h1>

    <h2>{{ mensaje }}</h2>

    <form action="{{ path('institucion_edit', {'id':institucion.idInstitucion }) }}" method="post">
        <input type="text" value="{{ institucion.idInstitucion }}" hidden="hidden" name="id"><br/>
        <input type="text" value="{{ institucion.nombreInstitucion }}" placeholder="nombre" name="nombreInstitucion"><br/>
        <input type="text" value="{{ institucion.direccionInstitucion }}" placeholder="direccion" name="direccionInstitucion"><br/>
        <input type="text" value="{{ institucion.telefonoInstitucion }}" placeholder="Telefono" name="telefonoInstitucion"><br/>
        <input type="text" value="{{ institucion.emailInstitucion }}" placeholder="email" name="emailInstitucion"><br/>
        <input type="submit" /><br/>
    </form>
    <ul class="record_actions">
        <li>
            <a href="{{ path('institucion') }}">
                Volver a la lista
            </a>
        </li>
    </ul>
{% endblock %}
