{% extends 'BoletinesBundle:Layout:layout.html.twig' %}
{% block breadcrumb %}Instituciones{% endblock %}

{% block page %}
    <div class="row">
        <div class="col s12 m12 l12 mar-top-soft">
            <h4 class="header">Instituciones activas</h4>
        </div>
    </div>
    <div class="col s2 m2 l2">
        <a href="{{ path('institucion_new') }}" data-position="left" data-delay="25" data-tooltip="Crear nueva Institución" class="tooltipped btn-floating btn-large waves-effect waves-light new-btn-marg"><i class="icon-linear-plus"></i></a>
    </div>
    <div class="input-field col s11">
        <form action="{{ path('institucion_search') }}" method="post" enctype="multipart/form-data">
            <i class="icon-linear-magnifier prefix"></i>
            <input id="icon_prefix" type="text" class="validate" name="search">
            <label for="icon_prefix">Buscar institución</label>
        </form>
    </div>
    <div class="row">
        <div class="col s12">

            <table class="striped">
                <thead>
                <tr>
                    <th data-field="id">Nombre</th>
                    <th data-field="name">Establecimientos</th>
                    <th data-field="price">Creación</th>
                    <th data-field="price">Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('institucion_show', {'id': entity.id}) }}" class="casual">{{ entity.nombre }}</a></td>
                        <td><span class="badge">{{ entity.establecimientos|length }}</span></td>
                        <td>{{ entity.creationTime | localizeddate('none', 'none', 'es_AR', null, "d MMM, hh:mm a Y") }}</td>
                        <td>
                            <a href="{{ path('institucion_edit', {'id': entity.id}) }}" data-position="top" data-delay="25" data-tooltip="Editar" class="tooltipped btn-small btn waves-effect waves-light"><i class="icon-linear-pencil"></i></a>
                            <a href="{{ path('establecimiento_new_with_institucion', {'institucionId': entity.id}) }}" data-position="top" data-delay="25" data-tooltip="Añadir establecimiento" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-plus"></i></a>
                            <a href="{{ path('institucion_delete', {'id': entity.id}) }}" data-position="top" data-delay="25" data-tooltip="Eliminar institución" class="tooltipped  btn-small btn waves-effect waves-light"><i class="icon-linear-trash2"></i></a>
                        </td>


                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>




{% endblock %}
