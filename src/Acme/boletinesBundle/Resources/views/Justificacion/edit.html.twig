{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Justificacion edit</h1>

    <h2>{{ mensaje }}</h2>

    <form action="{{ path('justificacion_edit', {'id':justificacion.idJustificacion }) }}" method="post">
        <input type="text" value="{{ justificacion.idJustificacion }}" hidden="hidden" name="idJustificacion"><br/>
        <input type="text" value="{{ justificacion.nombreJustificacion }}" placeholder="nombre" name="nombreJustificacion"><br/>
        {% if justificacion.entityRelacionada != null %}
            <p>EntityRelacionada Asociado</p>
            <p>{{ justificacion.entityRelacionada.__toString() }}</p>
            <p> Si desea cambiarlo elija uno de la lista de abajo</p>
        {% endif %}
        <select name="idEntityRelacionada">
            {% for entityRelacionada in entitiesRelacionadas %}

                <option value="{{entityRelacionada.idEntityRelacionada}}">{{entityRelacionada.__toString()}}</option>

            {% endfor %}
            <option value="-1" selected="selected">No seleccionar ninguna</option>
        </select>
        <input type="submit" /><br/>
    </form>
    <ul class="record_actions">
        <li>
            <a href="{{ path('justificacion') }}">
                Volver a la lista
            </a>
        </li>
    </ul>
{% endblock %}
