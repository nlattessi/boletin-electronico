<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="msapplication-tap-highlight" content="no">
        <meta name="description" content="Materialize is a modern responsive CSS framework based on Material Design by Google. ">
        <title>{% block title %}Communitas{% endblock %}</title>
        <!-- Favicons-->
        <link rel="apple-touch-icon-precomposed" href="{{ asset('images/favicon/apple-touch-icon-152x152.png') }}">
        <meta name="msapplication-TileColor" content="#FFFFFF">
        <meta name="msapplication-TileImage" content="{{ asset('bundles/boletines/images/favicon/mstile-144x144.png') }}">
        <link rel="icon" href="{{ asset('bundles/boletines/images/favicon/favicon-32x32.png') }}" sizes="32x32">
        <!--  Android 5 Chrome Color-->
        <meta name="theme-color" content="#EE6E73">

        <!-- CSS-->
        {% block stylesheets %}
            <link href="{{ asset('bundles/boletines/css/prism.css') }}" rel="stylesheet">
            <link href="{{ asset('bundles/boletines/css/ghpages-materialize.css') }}" type="text/css" rel="stylesheet" media="screen,projection">
            <link href="{{ asset('bundles/boletines/css/animate.css') }}" rel="stylesheet">
            <link href='https://fonts.googleapis.com/css?family=Lato:100,300,400,700,300italic' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        <!--  Scripts-->
        {% block javascripts %}
            <script src="{{ asset('bundles/boletines/js/jquery-2.1.1.min.js')}}"></script>
            <script src="{{ asset('bundles/boletines/js/jquery.timeago.min.js')}}"></script>
            <script src="{{ asset('bundles/boletines/js/prism.js')}}"></script>
            <script src="{{ asset('bundles/boletines/bin/materialize.js')}}"></script>
            <script src="{{ asset('bundles/boletines/js/init.js')}}"></script>

            <!-- Twitter Button -->
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>

            <!-- Google Plus Button-->
            <script src="https://apis.google.com/js/platform.js" async defer></script>

            <!--  Google Analytics  -->
            <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-56218128-1', 'auto');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
